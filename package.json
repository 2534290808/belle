{
  "name": "belle",
  "version": "1.2.2",
  "description": "Configurable React Components with great UX",
  "author": {
    "name": "Nik Graf",
    "email": "nik@nikgraf.com",
    "url": "http://www.nikgraf.com"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/nikgraf/belle.git"
  },
  "main": "lib/index.js",
  "keywords": [
    "browser",
    "react",
    "ux",
    "components",
    "widget",
    "javascript",
    "react-component"
  ],
  "peerDependencies": {
    "react": ">=0.13.0 || ^0.14.0-beta3"
  },
  "scripts": {
    "start": "babel --watch --source-maps-inline --out-dir='lib' src",
    "build": "babel --out-dir='lib' src",
    "prepublish": "npm run build",
    "postpublish": "./scripts/publish_gh_pages.sh",
    "test": "babel --out-dir='lib' src && cd tests && npm install && ln -snf ../lib lib && cd .. && jest tests/"
  },
  "devDependencies": {
    "babel": "^5.8.23",
    "babel-jest": "^5.3.0",
    "babel-eslint": "^4.1.1",
    "eslint": "^1.3.1",
    "eslint-plugin-react": "^3.3.1",
    "jest-cli": "^0.5.1",
    "react": ">=0.13.3"
  },
  "jest": {
    "unmockedModulePathPatterns": [
      "react",
      "underscore"
    ],
    "scriptPreprocessor": "<rootDir>/node_modules/babel-jest",
    "testFileExtensions": [
      "jsx",
      "js"
    ],
    "moduleFileExtensions": [
      "js",
      "json",
      "jsx"
    ]
  },
  "license": "MIT",
  "dependencies": {
    "exenv": "^1.2.0"
  }
}
